<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400" 
        MinWidth="400" MinHeight="250">
    <StackPanel VerticalAlignment="Center">
        <Button Content="Create User" Width="150" Height="30" FontSize="15" Click="Button_Click"/>
        <Button Content="Show All Users" Width="150" Height="30" FontSize="15" Margin="0,20,0,20" Click="Button_Click_2"/>
        <Button Content="Exit" Width="150" Height="30" FontSize="15" Click="Button_Click_1"/>
    </StackPanel>
</Window>
